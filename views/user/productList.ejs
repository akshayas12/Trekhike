<script>
    $(document).ready(function() {
        // Delegated event handling for the parent container
        $('.filter-items').on('change', '.custom-control-input', function() {
            var checkbox = $(this);

            // Uncheck other checkboxes in the same category group
            var categoryId = checkbox.data('category');
            $('.custom-control-input[data-category="' + categoryId + '"]').not(checkbox).prop('checked', false);

            // Update the UI to show/hide the check icon based on checkbox state
            updateCheckIcons();

            // If the checkbox is checked, navigate to the category page
            if (checkbox.prop('checked')) {
                window.location.href = '/product-list?category=' + categoryId + '&sort=asc';
            }
        });

        // Initial update to handle the checkbox state on page load
        updateCheckIcons();

        function updateCheckIcons() {
            $('.custom-control-input').each(function() {
                var checkbox = $(this);
                var categoryLabel = checkbox.siblings('.custom-control-label');
                var isSelected = checkbox.prop('checked');

                // Add or remove the check icon based on checkbox state
                if (isSelected) {
                    categoryLabel.find('.fa-check').remove(); // Remove any existing check icons
                    categoryLabel.append('<i class="fas fa-check"></i>');
                } else {
                    categoryLabel.find('.fa-check').remove();
                }
            });
        }
    });
</script>




